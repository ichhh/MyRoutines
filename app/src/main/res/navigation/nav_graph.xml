<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/itemsFragment">

    <fragment
        android:id="@+id/itemsFragment"
        android:name="com.example.MyRoutine2.ItemsFragment"
        android:label="ItemsFragment"
        tools:layout="@layout/items_fragment">
        <action
            android:id="@+id/action_itemsFragment_to_itemEditDialog"
            app:destination="@id/itemEditDialog">
            <argument
                android:name="item_name"
                android:defaultValue='""' />
            <argument
                android:name="item_duration"
                android:defaultValue="0" />
            <argument
                android:name="item_pause_after"
                android:defaultValue="false" />
        </action>
        <action
            android:id="@+id/action_itemsFragment_to_timerFragment"
            app:destination="@id/timerFragment" />
    </fragment>
    <dialog
        android:id="@+id/itemEditDialog"
        android:name="com.example.MyRoutine2.dialog.ItemEditDialog"
        android:label="ItemEditDialog"
        tools:layout="@layout/item_edit_dialog">
        <argument
            android:name="item_id"
            app:argType="long" />
        <argument
            android:name="item_name"
            app:argType="string"
            android:defaultValue='""' />
        <argument
            android:name="item_duration"
            app:argType="integer" />
        <argument
            android:name="item_pause_after"
            app:argType="boolean"
            android:defaultValue="false" />

    </dialog>
    <fragment
        android:id="@+id/timerFragment"
        android:name="com.example.MyRoutine2.TimerFragment"
        android:label="TimerFragment"
        tools:layout="@layout/timer_fragment">
        <argument
            android:name="item_id"
            app:argType="long" />
        <action
            android:id="@+id/action_timerFragment_self"
            app:destination="@id/timerFragment" />
    </fragment>
</navigation>